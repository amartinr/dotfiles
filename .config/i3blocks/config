# PulseAudio volume indicator
[volume-pulseaudio]
command=~/.local/bin/i3blocks-volume-pulseaudio -F '${SYMB} ${VOL}%' -C "#d1d4e0" -c "#828CA1" -t 25 -T 75
interval=once
#command=~/.local/bin/i3blocks-volume-pulseaudio -S -F '${SYMB} ${VOL}%' -C "#d1d4e0" -c "#828CA1" -t 25 -T 75
