# Please see http://i3wm.org/docs/userguide.html for a complete reference!
set $mod Mod1

## font
font pango:Ionicons 10
font pango:Sans 10

floating_modifier $mod
hide_edge_borders both
new_window normal

## i3-gaps
smart_borders on
smart_gaps on
gaps inner 10
gaps outer 2

for_window [class="^.*"] border pixel 0
for_window [class="^Termite|^Terminator|Xfce4-terminal|URxvt"] border pixel 1
bindsym Control+Shift+x [class="^.*"] border toggle

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal
#bindsym $mod+Return exec xfce4-terminal --hide-menubar --hide-toolbar --hide-borders

# kill focused window
bindsym $mod+Shift+q kill

## Rofi
set $rofi_options -run-list-command "~/.scripts/aliases.sh" -run-command "/bin/bash -i -c '{cmd}'" -lines 10 -eh 1 -width 50% -padding 8 -opacity 100 -bw 0
bindsym $mod+d exec rofi -show run $rofi_options
bindsym $mod+Shift+h exec rofi -show ssh $rofi_options

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+ntilde focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+ntilde move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# switch workspace
bindsym $mod+Control+j workspace prev
bindsym $mod+Control+ntilde workspace next

# move focused window
bindsym $mod+Control+Left workspace prev
bindsym $mod+Control+Right workspace next

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

mode "move" {
    bindsym Up move up 25px
    bindsym Left move left 25px
    bindsym Down move down 25px
    bindsym Right move right 25px
    bindsym j move left 25px
    bindsym k move down 25px
    bindsym l move up 25px
    bindsym ntilde move right 25px

    bindsym $mod+m mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m focus floating; mode "move"

# make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# show the first scratchpad window
bindsym $mod+minus scratchpad show

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+y focus child

