# Gray background upon startup 
xsetroot -bg gray -gray

# X bell off
xset b off

# X screen lock after 5 minutes of inactivity
xset s on
xset s blank
xset s noexpose
xset s 600
xset dpms 180 600 900

# add local to ACL
xhost +local:root

systemctl --user import-environment PATH DBUS_SESSION_BUS_ADDRESS DISPLAY XAUTHORITY
systemctl --no-block --user start xsession.target

# X keys
xbindkeys

# Screen brightness and hue
xbacklight -set 50
redshift &

#if xrandr -q | grep -q 'DP2 connected'; then
#    xrandr --output LVDS1 --off
#fi

# S.M.A.R.T. notifications
smart-notifier &

PATH="/usr/local/sbin:/usr/sbin:/sbin:$PATH"
# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi
